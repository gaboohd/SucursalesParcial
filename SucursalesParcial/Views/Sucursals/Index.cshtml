@model IEnumerable<SucursalesParcial.Models.Sucursal>

@{
    ViewData["Title"] = "Index";
}

<h1>Tabla de Sucursales registradas</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo</a>
</p>

<table class="table "table-striped" table-bordered" table fixed-table" table-sm">

    <thead class="thead-dark">
        <tr>
            <th style="width: 10%;">Nombre</th>
            <th style="width: 15%;">Dirección</th>
            <th style="width: 10%;">Ciudad</th>
            <th>@Html.DisplayNameFor(model => model.Estado)</th>
            <th>@Html.DisplayNameFor(model => model.CodigoPostal)</th>
            <th style="width: 15%;">Ciudad</th>
            <th>@Html.DisplayNameFor(model => model.CorreoElectronico)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Direccion</td>
                <td>@item.Ciudad</td>
                <td>@item.Estado</td>
                <td>@item.CodigoPostal</td>
                <td>@item.Telefono</td>
                <td>@item.CorreoElectronico</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
